<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



	<bean id="logger" class="com.caveofprogramming.spring.test.Logger"
		autowire="byType">
		<!-- The autowire="byType" attribute given to a bean in addition to that bean's
		 corresponding setter methods will inject the necessary dependencies. -->
	</bean>


	<bean id="consolewriter" class="com.caveofprogramming.spring.test.ConsoleWriter">
	</bean>

	<bean id="consolewriter2" class="com.caveofprogramming.spring.test.ConsoleWriter"
		autowire-candidate="false">
	</bean>

	<bean id="filewriter" class="com.caveofprogramming.spring.test.FileWriter">
	</bean>
	
</beans>
